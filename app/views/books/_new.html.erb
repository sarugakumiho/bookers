<%= form_with model: book, url: books_path do |f| %> 
  <h2>New book</h2>

<% if book.errors.any? %>
  <%= book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  <p>Title</p>
  <%= f.text_field :title, id: :book_title, name: "book[title]" %>
  
  <p>Body</p>
  <%= f.text_area :body, id: :book_body, name: "book[body]" %>
	
  <p><%= f.submit 'Create Book' %></p>
  
<% end %>